# Database Configuration
POSTGRES_DB=teleweb
POSTGRES_USER=teleweb_user
POSTGRES_PASSWORD=teleweb_password
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=redis_password
REDIS_PORT=6379

# Application Ports
BACKEND_PORT=3001
FRONTEND_PORT=3000
BOT_API_PORT=8081

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Telegram Bot Configuration
BOT_TOKEN=your-telegram-bot-token-here
BOT_API_SERVER=https://api.telegram.org
BOT_API_DATA_PATH=/app/bot_data

# Local Telegram Bot API (Optional)
TELEGRAM_API_ID=your-telegram-api-id
TELEGRAM_API_HASH=your-telegram-api-hash
HTTP_PORT=8081
DATA_DIR=/var/lib/telegram-bot-api

# Backend API Configuration
BACKEND_API_KEY=your-backend-api-key-for-bot-communication

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_PATH=/app/uploads

# Google Cloud Vision (for OCR)
GOOGLE_APPLICATION_CREDENTIALS=/app/config/google-cloud-key.json

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400000

# Email Configuration (Optional for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@teleweb.com

# Webhook Configuration (Optional)
WEBHOOK_URL=https://your-domain.com/webhook
WEBHOOK_SECRET=your-webhook-secret

# Development/Production Mode
NODE_ENV=development

# Admin User Configuration (for seeding)
ADMIN_TELEGRAM_ID=your-telegram-id
ADMIN_NAME=Admin User
ADMIN_USERNAME=admin
