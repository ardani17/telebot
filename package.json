{
  "name": "teleweb",
  "version": "1.0.0",
  "description": "Telegram Bot Web Integration - Modern bot with web admin panel",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "bot",
    "shared"
  ],
  "scripts": {
    "dev": "docker-compose up",
    "dev:build": "docker-compose up --build",
    "dev:down": "docker-compose down",
    "dev:clean": "docker-compose down -v",
    "dev:logs": "docker-compose logs -f",
    "prod": "docker-compose -f docker-compose.prod.yml up -d",
    "prod:build": "docker-compose -f docker-compose.prod.yml up --build -d",
    "prod:down": "docker-compose -f docker-compose.prod.yml down",
    "install:all": "npm install && npm run install:backend && npm run install:frontend && npm run install:bot && npm run install:shared",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:bot": "cd bot && npm install",
    "install:shared": "cd shared && npm install",
    "build:all": "npm run build:shared && npm run build:backend && npm run build:frontend && npm run build:bot",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:bot": "cd bot && npm run build",
    "build:shared": "cd shared && npm run build",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --cache",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix --cache",
    "lint:backend": "cd backend && eslint src --ext .ts --cache",
    "lint:frontend": "cd frontend && eslint src --ext .ts,.tsx --cache",
    "lint:bot": "cd bot && eslint src --ext .ts --cache",
    "test": "npm run test:backend && npm run test:frontend && npm run test:bot",
    "test:backend": "cd backend && npm run test",
    "test:frontend": "cd frontend && npm run test",
    "test:bot": "cd bot && npm run test",
    "db:migrate": "cd backend && npm run prisma:migrate",
    "db:seed": "cd backend && npm run prisma:seed",
    "db:studio": "cd backend && npm run prisma:studio",
    "db:reset": "cd backend && npm run prisma:reset",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .prettierignore",
    "quality": "npm run lint && npm run format:check",
    "quality:fix": "npm run lint:fix && npm run format",
    "quality:errors": "npm run lint -- --quiet",
    "quality:backend": "cd backend && npm run lint:fix && npm run format",
    "quality:frontend": "cd frontend && npm run lint:fix && npm run format",
    "quality:bot": "cd bot && npm run lint:fix && npm run format",
    "type-check": "npm run type-check:backend && npm run type-check:frontend && npm run type-check:bot",
    "type-check:backend": "cd backend && npm run type-check",
    "type-check:frontend": "cd frontend && npm run type-check",
    "type-check:bot": "cd bot && npm run type-check"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.3.3",
    "prisma": "^6.9.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/teleweb.git"
  },
  "keywords": [
    "telegram",
    "bot",
    "web",
    "integration",
    "nestjs",
    "react",
    "typescript",
    "docker"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-username/teleweb/issues"
  },
  "homepage": "https://github.com/your-username/teleweb#readme",
  "dependencies": {
    "@google-cloud/vision": "^5.2.0",
    "@prisma/client": "^6.9.0",
    "multer": "^2.0.1",
    "sharp": "^0.34.2"
  }
}
